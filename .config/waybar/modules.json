{
  "group/audio": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio",
      "pulseaudio#microphone"
    ]
  },
  "group/motherboard": {
    "orientation": "horizontal",
    "modules": [
      "cpu",
      "memory",
      "temperature",
      "disk"
    ]
  },
  "group/keyboard": {
    "orientation": "horizontal",
    "modules": [
      "hyprland/language",
      "custom/capslock"
    ]
  },
  "group/localai": {
    "orientation": "horizontal",
    "modules": [
      "custom/ollama-model",
      "custom/ollama-state",
      "custom/gpu-usage"
    ]
  },
  "group/finalspace": {
    "orientation": "horizontal",
    "modules": [
      "idle_inhibitor",
      "custom/swaync",
      "custom/power"
    ]
  },
  "hyprland/workspaces": {
    "active-only": false,
    "all-outputs": true,
    "format": "{name}",
    "show-special": false,
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },
  "pulseaudio": {
    "format": "{icon} {volume}% ",
    "format-bluetooth": "{icon} Û∞Ç∞ {volume}%",
    "format-muted": "Û∞ñÅ",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "Û∞ïæ",
        "ÔÄ®"
      ],
      "ignored-sinks": [
        "Easy Effects Sink"
      ]
    },
    "scroll-step": 5.0,
    "on-click": "$HOME/.config/hypr/scripts/utils/Volume.sh --toggle",
    "on-click-right": "pavucontrol -t 3",
    "on-scroll-up": "$HOME/.config/hypr/scripts/utils/Volume.sh --inc",
    "on-scroll-down": "$HOME/.config/hypr/scripts/utils/Volume.sh --dec",
    "tooltip-format": "{icon} {desc} | {volume}%",
    "smooth-scrolling-threshold": 1
  },
  "pulseaudio#microphone": {
    "format": " {format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ±",
    "on-click": "$HOME/.config/hypr/scripts/utils/Volume.sh --toggle-mic",
    "on-click-right": "pavucontrol -t 4",
    "on-scroll-up": "$HOME/.config/hypr/scripts/utils/Volume.sh --mic-inc",
    "on-scroll-down": "$HOME/.config/hypr/scripts/utils/Volume.sh --mic-dec",
    "tooltip-format": "{source_desc} | {source_volume}%",
    "scroll-step": 5
  },
  "custom/recording": {
    "format": "{}",
    "exec": "echo 'üî¥ REC'",
    "exec-if": "pgrep wf-recorder",
    "interval": 1,
    "tooltip": "false",
    "on-click": "$HOME/.config/hypr/scripts/utils/KillWfRecorder.sh"
  },
  "custom/ollama-model": {
    "format": "{}",
    "exec": "$HOME/.config/hypr/scripts/utils/OllamaModel.sh",
    "tooltip": "false",
    "interval": 1,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/ollama-model-menu.xml",
    "menu-actions": {
      "deepseek-r1:14b": "ollama run deepseek-r1:14b",
      "phi4:latest": "ollama run phi4:latest",
      "qwen2.5-coder:14b": "ollama run qwen2.5-coder:14b",
      "codellama:7b": "ollama run codellama:7b"
    }
  },
  "custom/ollama-state": {
    "format": "{}",
    "exec": "$HOME/.config/hypr/scripts/utils/OllamaState.sh",
    "interval": 1,
    "tooltip": false,
    "on-click": "$HOME/.config/hypr/scripts/specialWorkspaces/Toggle.sh ollama"
  },
  "custom/gpu-usage": {
    "exec": "echo $(cat /sys/class/drm/card1/device/gpu_busy_percent)",
    "format": "       {}%",
    "return-type": "",
    "interval": 10,
    "tooltip": false
  },
  "clock#simpleclock": {
    "interval": 1,
    "format": "{:%H:%M:%S}",
    "format-alt": "{:%H:%M:%S}",
    "tooltip": true,
    "tooltip-format": "{:%A Óàñ %d %B Óàñ %Y}",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "on-click": "$HOME/.config/hypr/scripts/utils/Calendar.sh",
    "actions": {
      "on-click": "$HOME/.config/hypr/scripts/utils/Calendar.sh",
      "on-click-right": "mode"
    }
  },
  "custom/weather": {
    "format": "{}",
    "format-alt": "Grangemouth: {}",
    "format-alt-click": "click",
    "interval": 1800,
    "return-type": "json",
    "exec": "$HOME/.config/hypr/scripts/utils/Weather.py",
    "exec-if": "ping wttr.in -c1",
    "tooltip": true
  },
  "custom/updates": {
    "return-type": "json",
    "text": "<span foreground='#32728d'>{text}</span>",
    "interval": 1800,
    "exec": "$HOME/.config/hypr/scripts/utils/DnfUpdatesWaybar.sh",
    "tooltip": true,
    "on-click": "wezterm --config 'window_padding={left=20, right=20, top=10, bottom=10}' start --always-new-process --class 'wez-updater' -- $HOME/.config/hypr/scripts/utils/DnfSpawnWezUpdater.sh"
  },
  "cpu": {
    "format": "{usage}% Û∞çõ",
    "interval": 1,
    "format-alt-click": "click",
    "format-alt": "{icon0}{icon1}{icon2}{icon3} {usage:>2}% Û∞çõ",
    "format-icons": [
      "‚ñÅ",
      "‚ñÇ",
      "‚ñÉ",
      "‚ñÑ",
      "‚ñÖ",
      "‚ñÜ",
      "‚ñá",
      "‚ñà"
    ],
    "on-click-right": "wezterm start -- btop"
  },
  "memory": {
    "interval": 10,
    "format": "{used:0.1f}G Û∞æÜ",
    "format-alt": "{percentage}% Û∞æÜ",
    "format-alt-click": "click",
    "tooltip": true,
    "tooltip-format": "{used:0.1f}GB/{total:0.1f}G",
    "on-click-right": "wezterm start -- btop"
  },
  "temperature": {
    "interval": 10,
    "tooltip": true,
    "hwmon-path": [
      "/sys/class/hwmon/hwmon1/temp1_input",
      "/sys/class/thermal/thermal_zone0/temp"
    ],
    "critical-threshold": 82,
    "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": [
      "Û∞à∏"
    ],
    "on-click-right": "wezterm start -- btop"
  },
  "disk": {
    "interval": 30,
    "path": "/",
    "format": "{percentage_used}% Û∞ãä",
    "tooltip-format": "{used} used out of {total} on {path} ({percentage_used}%)",
    "on-click-right": "wezterm start -- gdu"
  },
  "hyprland/language": {
    "format": "ÔÑú  {}",
    "format-en": "GB",
    "format-pl": "PL",
    "on-click": "$HOME/.config/hypr/scripts/utils/SwitchKeyboardLayout.sh"
  },
  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "unlocked": false,
    "format": {
      "capslock": " "
    },
    "format-icons": {
      "locked": " c ",
      "unlocked": " u "
    }
  },
  "custom/capslock": {
    "exec": "$HOME/.config/hypr/scripts/utils/CapslockStatus.sh",
    "format": " ",
    "interval": 1,
    "return-type": "json"
  },
  "tray": {
    "icon-size": 12,
    "spacing": 12,
    "show-passive-items": false
  },
  "idle_inhibitor": {
    "format": " "
  },
  "custom/swaync": {
    "tooltip": false,
    "format": "{icon}<sup>{0}</sup>",
    "format-icons": {
      "notification": "<span foreground='#ff7e76'>Û∞Çö </span>",
      "none": "<span foreground='#111e20'>Û∞Çö </span>",
      "dnd-notification": "<span foreground='#d43e69'>Û∞Çõ </span>",
      "dnd-none": "<span foreground='#111e20'>Û∞Çõ </span>",
      "inhibited-notification": "<span foreground='#eca036'>Û∞πá </span>",
      "inhibited-none": "<span foreground='#111e20'>Û∞πá </span>",
      "dnd-inhibited-notification": "<span foreground='#d43e69'>Û±†± </span>",
      "dnd-inhibited-none": "<span foreground='#111e20'>Û±†± </span>"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "custom/power": {
    "format": "‚èª",
    "exec": "echo ; echo Û∞ü° power // blur",
    "on-click": "$HOME/.config/hypr/scripts/utils/Wlogout.sh",
    "on-click-right": "$HOME/.config/hypr/scripts/wallpaperAndStyle/ChangeBlur.sh",
    "interval": 86400,
    "tooltip": false
  },
  "custom/separator#right_slant": {
    "format": "ü≠° ",
    "interval": "once",
    "tooltip": false
  },
  "custom/separator#left_slant": {
    "format": "ü≠Ö",
    "interval": "once",
    "tooltip": false
  }
}
