 /* bring in defaults to override things below the import */ 
@import "~/.config/rofi/config.rasi"

mainbox {
    margin:                     20% 20% 51.30% 20%;
    expand:                     true;
    children:                   ["vertical-wrapper", "listview" ];
}

vertical-wrapper {
  orientation:                  vertical;
  border:                       0px 3px 0px 0px;
  children:                     [ "icon-current-entry", "inputbar"  ];
}

/* HACK:  current img preview  hack */
icon-current-entry  {                     
  expand:                       true;
  margin:                       -2px;
  size:                         53%;
}


inputbar {
  /* sadly cannot position this absolutely over icon? */
    background-color:           @background-dark;
}

textbox-prompt-icon {
    str:                        " ÔÄè ";
}

entry {
    enabled:                    true;
    padding:					          6px 0px 0px 0px;
    text-color:                 inherit;
    cursor:                     text;
    placeholder-color:          inherit;
    background-color:			      transparent;
    placeholder:                "Wallpapers...";
}

/*  Listview  */
listview {
  margin:                       -2px 0 0 -2px;
}                              
                               
/* HACK:  hide icons in the listview */
element-icon {                 
  size: 0px;
}                              
